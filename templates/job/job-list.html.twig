{% extends 'layout.html.twig' %}

{% block title %}PROCOST - Métiers{% endblock %}

{% block content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-book"></i>&nbsp;Métiers</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('dashboard') }}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">Métiers</li>
            </ul>
        </div>
        <div class="tile pb-5">
            <a href="{{ path('job_add') }}" class="btn btn-primary float-right mb-4"><i class="fa fa-plus-circle mr-2"></i>Ajouter un métier</a>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for key, job in jobs %}
                        <tr>
                            <td>{{ job.name|capitalize }}</td>
                            <td>
                                <a href="{{ path('job_edit', {'id' : job.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fa fa-pencil mr-0"></i>
                                </a>
                                {% if job.employees|length == 0 %}
                                    <a href="{{ path('job_remove', {'id' : job.id}) }}" class="btn btn-danger btn-sm">
                                        <i class="fa fa-trash mr-0"></i>
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <hr/>

            <nav class="float-right">
                {{ knp_pagination_render(jobs) }}
            </nav>
        </div>
    </main>
{% endblock %}