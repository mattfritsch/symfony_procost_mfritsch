{% extends 'layout.html.twig' %}

{% block title %}PROCOST - Employé - Edition{% endblock %}

{% block content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i>&nbsp;Edition d'un employé</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('dashboard') }}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('app_employee') }}">Employés</a>
                </li>
                <li class="breadcrumb-item">Edition d'un employé</li>
            </ul>
        </div>
        <div class="tile">
            {% for flash_type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-dismissible alert-{{ flash_type }} my-4">
                        <button class="close" type="button" data-dismiss="alert">×</button>
                        {% if flash_type == 'success' %}
                            <strong>Super!</strong>
                        {% endif %}
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form, {'attr': {'class' : 'form-horizontal'}}) }}
                <section>
                    <h3>Informations générales</h3>
                    <div class="row mt-4">
                        <div class="offset-md-4 col-md-8">
                            <div class="form-group row">
                                {{ form_label(form.firstName, null, {
                                    'label_attr': {'class': 'control-label col-md-3'}
                                })
                                }}
                                <div class="col-md-9">
                                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder': form.firstName.vars.label}}) }}
                                    <div class="form-control-feedback text-danger">
                                        {{ form_errors(form.firstName) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                {{ form_label(form.lastName, null, {
                                    'label_attr': {'class': 'control-label col-md-3'}
                                    })
                                }}
                                <div class="col-md-9">
                                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'placeholder': form.lastName.vars.label}}) }}
                                    <div class="form-control-feedback text-danger">
                                        {{ form_errors(form.lastName) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                {{ form_label(form.email, null, {
                                    'label_attr': {'class': 'control-label col-md-3'}
                                    })
                                }}
                                <div class="col-md-9">
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': form.email.vars.label}}) }}
                                    <div class="form-control-feedback text-danger">
                                        {{ form_errors(form.email) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <section>
                    <h3>Production</h3>
                    <div class="row mt-4">
                        <div class="offset-md-4 col-md-8">
                            <div class="form-group row">
                                {{ form_label(form.job, null, {
                                    'label_attr': {'class': 'control-label col-md-3'}
                                    })
                                }}
                                <div class="col-md-9">
                                    {{ form_widget(form.job, {'attr': {'class': 'form-control', 'placeholder': form.job.vars.label}}) }}
                                    <div class="form-control-feedback text-danger">
                                        {{ form_errors(form.job) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                {{ form_label(form.dailyCost, null, {
                                    'label_attr': {'class': 'control-label col-md-3'}
                                    })
                                }}
                                <div class="col-md-9">
                                    {{ form_widget(form.dailyCost, {'attr': {'class': 'form-control', 'placeholder': form.dailyCost.vars.label}}) }}
                                    <div class="form-control-feedback text-danger">
                                        {{ form_errors(form.dailyCost) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                {{ form_label(form.hiringDate, null, {
                                        'label_attr': {'class': 'control-label col-md-3'}
                                    })
                                }}
                                <div class="col-md-9">
                                    {{ form_widget(form.hiringDate, {'attr': {'class': 'form-control', 'placeholder': form.hiringDate.vars.label}}) }}
                                    <div class="form-control-feedback text-danger">
                                        {{ form_errors(form.hiringDate) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            <div class="row">
                <div class="offset-md-6 col-md-6">
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}